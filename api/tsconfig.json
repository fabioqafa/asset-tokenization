{
    "compilerOptions": {
        "outDir": "dist",
        "esModuleInterop" : true,
        "allowJs": true,
        "target": "ES2022",
        "module": "CommonJS",
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
        }
    },
        "include": ["src/**/*"],
        "exclude": ["node_modules"]
}